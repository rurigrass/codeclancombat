<link rel="stylesheet" type="text/css" href="/styles/table.css">

<div class="table">

<form class="new" action="/player_list" method="post">
<p>
  <label for="player-name">Player name:</label>
  <input type="text" name="name" id="player-name">
</p>
<p>
  <label for="strength-select">Strength</label>
  <select name="strength" id="strength-select">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
</p>  
<p>
  <label for="ability-select">Ability</label>
  <select name="ability" id="ability-select">
    <option value="1">1</option>
    <option value="2">2</option>
    <option value="3">3</option>
    <option value="4">4</option>
    <option value="5">5</option>
  </select>
</p>
  <input type="submit" value="Add player">

</form>

</div>
